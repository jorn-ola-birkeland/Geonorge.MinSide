@using Microsoft.AspNetCore.Http;
@model Geonorge.MinSide.Infrastructure.Context.Meeting

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2>Nytt møte</h2>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="OrganizationNumber" type="hidden" value="@Context.Session.GetString("OrganizationNumber")" class="form-control" />

                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    @{var Types = new SelectList(CodeList.MeetingTypes, "Key", "Value");}
                    <select name="Type" class="form-control" asp-items="Types"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opprett" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn no-margin-bottom show-loading-animation">Tilbake</a>
    </div>
</div>

