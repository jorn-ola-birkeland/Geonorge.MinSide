@using Microsoft.AspNetCore.Http;
@model Geonorge.MinSide.Infrastructure.Context.ToDo

@{
    ViewData["Title"] = "Opprett oppfølgingspunkt";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <input type="hidden" name="MeetingId" value="@Context.Request.Query["meetingId"]" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResponsibleOrganization" class="control-label"></label>
                    <input asp-for="ResponsibleOrganization" value="@Context.Session.GetString("OrganizationName")" class="form-control" />
                    <span asp-validation-for="ResponsibleOrganization" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Deadline" class="control-label"></label>
                    <input asp-for="Deadline" type="date" class="form-control" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" name="sendNotification" value="true" checked /> Send beskjed på epost
                </div>
                <div class="form-group">
                    <input type="submit" value="Opprett" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="Index?meetingId=@Context.Request.Query["meetingId"]">Tilbake</a>
    </div>
</div>

